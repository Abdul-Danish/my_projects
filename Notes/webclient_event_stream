if (httpHeaders.containsKey("Accept") && "text/event-stream".equals(httpHeaders.get("Accept").get(0))) {
                log.info("Evaluating TEXT_EVENT_STREAM_1");
                log.info("Payload: {}", payload);
                WebClient webClient = WebClient.create();
                ParameterizedTypeReference<ServerSentEvent<String>> type = new ParameterizedTypeReference<ServerSentEvent<String>>() {
                };

                RequestBodySpec bodySpec = webClient.method(HttpMethod.valueOf(method)).uri(uri);
                RequestHeadersSpec<?> headerSpec = bodySpec.headers(header -> header.addAll(httpHeaders))
                    .bodyValue(mapper.readTree(payload.toString()));
                Flux<ServerSentEvent<String>> eventFlux = headerSpec.retrieve().bodyToFlux(type);
                
                log.info("Before Exchange");
                CompletableFuture<List<JsonNode>> future = eventFlux.map(event ->  {
                    try {
                        return mapper.readTree(event.data());
                    } catch (JsonProcessingException ex) {
                        throw new RuntimeException("Failed to parse JSON in SSE data: " + event, ex);
                    }
                })
                .collectList().toFuture();
                log.info("After Exchange: {}", future.get());
                
