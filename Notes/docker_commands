docker image list:

	- docker image ls


docker build command:

	- docker build -t my-username/my-image . (with default tag)

	- docker build -t my-username/my-image:1.5.1 . (with tag)

docker push command:

	- docker push myusername/myapp:1.0




edit config default in knative:

	- kubectl edit configmap config-defaults -n knative-serving

	- refreshResourceVersion configmap/config-defaults knative-serving (refresh config map)

edit activator in knative:

	- kubectl edit deployment activator -n knative-serving

	- refreshResourceVersion deployment.apps/activator knative-serving (refresh deployment)

	(get using "k get deployments -n knative-serving -o name")


refresh function:

refreshResourceVersion() {(
    RES_NAME="${1:-NONE}"
    RES_NMSP="${2:-NONE}"
    if [[ "NONE" = "${RES_NAME}" || "NONE" = "${RES_NMSP}" ]]; then
        echo "\nMissing Parameter NAME: ${RES_NAME},  NAMESPACE: ${RES_NMSP}"
    else
        RES_RESP=$(kubectl get "${RES_NAME}" -n "${RES_NMSP}" -o yaml \
            | sed /"last-applied-configuration:"/,/"\"apiVersion\""/d \
            | sed /"^  creationTimestamp:"/d \
            | sed /"^  resourceVersion:"/d \
            | sed /"^  selfLink:"/d \
            | sed /"^  uid:"/d \
            | kubectl apply -f -)
        echo "${RES_RESP}"
    fi
)}