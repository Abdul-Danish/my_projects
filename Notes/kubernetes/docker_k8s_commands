@@ Docker:

docker image list:

	- docker image ls

delete docker images in local:
	
	- docker rm -vf $(docker ps -aq)

	- docker rmi -f $(docker images -aq)

docker build command:

	- docker build -t my-username/my-image . (with default tag)

	- docker build -t my-username/my-image:1.5.1 . (with tag)

docker push command:

	- docker push myusername/myapp:1.0

docker login:
	
	- docker login -u abduldanish

	- Generate Token from:

	 - Docker Hub -> Account Settings -> Personal access tokens


@@ Kubernetes:


edit config default in knative:

	- kubectl edit configmap config-defaults -n knative-serving

	- refreshResourceVersion configmap/config-defaults knative-serving (refresh config map)

edit activator in knative:

	- kubectl edit deployment activator -n knative-serving

	- refreshResourceVersion deployment.apps/activator knative-serving (refresh deployment)

	(get using "k get deployments -n knative-serving -o name")



- kubectl version

- kubectl get nodes/pods/deployments/services/replicaset -o w  ("-o wide" for more information)

- kubectl describe nodes/pods/deployments/services/replicaset INSTANCE

- kubectl edit nodes/pods/deployments/services/replicaset your_yaml_file.yaml

- kubectl delete nodes/pods/deployments/services/replicaset your_yaml_file.yaml

@@ Create

- kubectl create -f your_yaml_file.yaml

@@ Replace:
- kubectl replace -f your_yaml_file.yaml

- kubectl scale --replicas=6 -f your_yaml_file.yaml (not recommeded, will not reflect immedeatly)

- kubectl scale --replicas=6 replicaset myapp-replicaset
  (recommended, will update based on replicaset name)
  ("myapp-replicaset" is name of replicaset under meta data field)

@@ Logs
 - kubectl logs -f your_pod_name
